@model List<Activity2Part1.Models.ButtonModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Button</title>
    <style>
        .label1 { font-size: 24px; font-family: Arial; font-weight: bold; display: block; text-align: center; }

        .label2 { display: block; font-family: Arial; font-size: 18px; font-weight: bold; text-align: left; }
    </style>
</head>
<body>
    <div>
        @Html.Label("Welcome to Razor", new { @class = "label1" })
        <br />
        @Html.Label("Play with Buttons", new { @class = "label2" })
        @using (Html.BeginForm("HandleButtonClick", "Button"))
        {
            for (int i = 0; i <Model.Count; i++)
            {
            <button type="submit" name="mine" value="@i">
                @if (Model[i].State == true)
                {
                    <img src="~/Images/green.png" />
                }
                else
                {
                    <img src="~/Images/red.png" />
                }
            </button>
             }
        }
    </div>
</body>
</html>
